#:kivy 1.10.1

<MainWindow>:
    sltime: sltime
    w_weather: w_weather
    gCal: gCal
    clock: clock
    names: names
    yearTrivia: yearTrivia

    BoxLayout:
        cols:1
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            Label:
                id: clock
                text: "Time: time"
            Label:
                id: names
                text: "Nothing to show"
            Label:
                text_size: self.size
                id: yearTrivia
                text: "Nothing to show"
            Button:
                size_hint: 1,0.5
                text: "Press Me!"
                on_release: root.randNumbs(), root.getNames(), root.getWeather(), root.getSL(), root.getCal(), root.getClock
        BoxLayout:
            cols:3
            Label:
                text_size: self.size
                id: sltime
                text: "Nothing to show!!"
            Label:
                text_size: self.size
                id: w_weather
                text: "Another row"
            Label:
                text_size: self.size
                id: gCal
                text: "Blabla"

