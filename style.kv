#:kivy 1.10.1

<MainWindow>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    canvas:
        Color:
            rgb: [0.5,0.5,0.5]
        Rectangle:
            pos: self.pos
            size: self.size
    
    TabbedPanelItem:
        text: 'Main tab'
        Label:
            text: 'First tab Content'

    TabbedPanelItem:
        text: 'SL tab'
        BoxLayout:
            Label:
                text: 'Second tab content area'
            Button:
                text: 'Button that does nothing'

    TabbedPanelItem:
        text: 'Weather tab'
        Label:
            text: 'Lala'
